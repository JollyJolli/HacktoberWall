//css file

#about-us {
    padding: 20px;
    background-color: #f9f9f9;
    text-align: center;
}
.owners {
    display: flex;
    justify-content: center;
    gap: 20px;
}
.owner {
    max-width: 200px;
}
img {
    width: 100%;
    border-radius: 50%;
}


//js file

const owners = [
    { username: 'Jolly', elementId: 'jolly-profile' },
    { username: 'Phanty78', elementId: 'phanty-profile' }
];

owners.forEach(owner => {
    fetch(`https://api.github.com/users/${owner.username}`)
        .then(response => response.json())
        .then(data => {
            const imgElement = document.getElementById(owner.elementId);
            imgElement.src = data.avatar_url; // Set the profile picture
        })
        .catch(error => console.error('Error fetching GitHub profile:', error));
});
